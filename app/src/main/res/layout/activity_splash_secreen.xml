<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05453F"
    tools:context=".Activites.Splash_screen">


    <RelativeLayout
        android:layout_marginTop="80dp"
        android:id="@+id/splash1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:text="Thinking Skills"
            android:textAlignment="center"
            android:textSize="28dp"
            android:textStyle="bold">


        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/splash2"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@+id/splash1"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="220dp"
            android:foregroundGravity="center"
            android:layout_height="242dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:src="@drawable/mind_logo" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/splash2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar

            android:id="@+id/progreesbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:visibility="visible"
            android:indeterminateTint="@color/white"
            />


    </RelativeLayout>




</RelativeLayout>